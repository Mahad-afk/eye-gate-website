    <!-- Cart icon -->
    <div class="cart" onclick="toggleCart()">
      Cart (<span id="cart-count">0</span>)
    </div>

    <!-- Cart popup -->
    <div id="cart-items">
      <h3>Your Cart</h3>
      <ul id="cart-list"></ul>
      <p id="total-price"></p>
      <button onclick="clearCart()">Clear Cart</button>
    </div>

    <script>
      const products = [
        {
          id: 1,
          name: 'Black Aviator',
          price: 120,
          image:
            'data:image/png;base64,',
        },
        {
          id: 2,
          name: 'Retro Round',
          price: 150,
          image:
            'data:image/jpeg;base64,',
        },
        {
          id: 3,
          name: 'Sport Vision',
          price: 180,
          image:
            'data:image/jpeg;base64,',
        },
      ];

      let cart = JSON.parse(localStorage.getItem('cart')) || [];

      // Render product grid
      function renderProducts() {
        const grid = document.getElementById('product-grid');
        grid.innerHTML = '';
        products.forEach((product) => {
          const div = document.createElement('div');
          div.className = 'product';
          div.innerHTML = `
            <img src="${product.image}" alt="${product.name}" />
            <h3>${product.name}</h3>
            <p>$${product.price}</p>
            <button onclick="addToCart(${product.id})">Add to Cart</button>
          `;
          grid.appendChild(div);
        });
      }

      // Add item or increase qty if already in cart
      function addToCart(id) {
        const product = products.find((p) => p.id === id);
        const cartItem = cart.find((item) => item.id === id);
        if (cartItem) {
          cartItem.qty++;
        } else {
          cart.push({ ...product, qty: 1 });
        }
        saveCart();
        updateCart();
      }

      // Remove one quantity or remove item from cart
      function removeFromCart(id) {
        const cartItem = cart.find((item) => item.id === id);
        if (!cartItem) return;
        cartItem.qty--;
        if (cartItem.qty <= 0) {
          cart = cart.filter((item) => item.id !== id);
        }
        saveCart();
        updateCart();
      }

      // Render cart popup items
      function renderCart() {
        const list = document.getElementById('cart-list');
        list.innerHTML = '';
        let total = 0;
        cart.forEach((item) => {
          total += item.price * item.qty;
          const li = document.createElement('li');
          li.innerHTML = `
            <span>${item.name} - $${item.price} Ã— ${item.qty}</span>
            <button onclick="removeFromCart(${item.id})">-</button>
          `;
          list.appendChild(li);
        });
        document.getElementById('total-price').innerText = `Total: $${total.toFixed(
          2
        )}`;
      }

      // Show/hide cart popup
      function toggleCart() {
        const cartBox = document.getElementById('cart-items');
        if (cartBox.style.display === 'block') {
          cartBox.style.display = 'none';
        } else {
          renderCart();
          cartBox.style.display = 'block';
        }
      }

      // Update cart count & render
      function updateCart() {
        document.getElementById('cart-count').innerText = cart.reduce(
          (sum, item) => sum + item.qty,
          0
        );
        renderCart();
      }

      // Save cart to localStorage
      function saveCart() {
        localStorage.setItem('cart', JSON.stringify(cart));
      }

      // Clear cart completely
      function clearCart() {
        cart = [];
        saveCart();
        updateCart();
      }

      // Initial render
      renderProducts();
      updateCart();
    </script>
  </body>
